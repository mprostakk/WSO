{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2021",
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "baseUrl": ".",
    "rootDir": "./",
    "types": ["node"],
    "paths": {
      "*": ["node_modules/*", "@types/*", "./src/*.d.ts"]
    },
    "typeRoots": ["./@types", "./src/*.d.ts"]
  },
  "include": [
    "src/**/*",
    "src/**/*.d.ts",
    "@types",
    "../node_modules/@types/node/index.d.ts",
    "@types"
  ],
  "exclude": ["node_modules"]
}
